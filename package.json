{
  "scripts": {
    "webpack": "webpack --config webpack.js --env.target=${WEBPACK_TARGET} --env.mode=${WEBPACK_MODE} --progress",
    "webpack:web": "WEBPACK_TARGET=web WEBPACK_MODE=${NODE_ENV} npm run webpack",
    "webpack:node": "WEBPACK_TARGET=node WEBPACK_MODE=${NODE_ENV} npm run webpack",
    "webpack:all": "echo \"webpack:web webpack:node\" | xargs -t -P2 -n1 npm run",
    "webpack:web:development": "NODE_ENV=development npm run webpack:web",
    "webpack:node:development": "NODE_ENV=development npm run webpack:node",
    "build": "WEBPACK_MODE=${NODE_ENV} npm run webpack:all",
    "start": "node index.js",
    "start:nodemon": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "config": "^3.2.4",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-config-wikimedia": "^0.14.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "optionalDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "cache-loader": "^4.1.0",
    "css-loader": "^3.3.2",
    "file-loader": "^5.0.2",
    "intersection-observer": "^0.7.0",
    "moment": "^2.24.0",
    "moment-locales-webpack-plugin": "^1.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-loader": "^2.4.6",
    "style-loader": "^1.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
